############## Configure the fitters for  Out In Tracking 
#TrackProducers
module ckfOutInTracksFromConversionsBarrel = TrackProducerWithSCAssociation
{
  string Fitter = "KFFittingSmootherForOutIn"	
  string Propagator = "PropagatorWithMaterial"
  string producer = "conversionTrackCandidates"
  string src = "outInTracksFromConversionsBarrel"
  string trackCandidateSCAssociationCollection = "outInTrackCandidateSCBarrelAssociationCollection"
  string recoTrackSCAssociationCollection = "outInTrackSCBarrelAssociationCollection"
  string TTRHBuilder       =   "WithTrackAngle"
  bool TrajectoryInEvent = false
}

module ckfOutInTracksFromConversionsEndcap = TrackProducerWithSCAssociation
{
  string Fitter = "KFFittingSmootherForOutIn"	
  string Propagator = "PropagatorWithMaterial"
  string producer = "conversionTrackCandidates"
  string src = "outInTracksFromConversionsEndcap"
  string trackCandidateSCAssociationCollection = "outInTrackCandidateSCEndcapAssociationCollection"
  string recoTrackSCAssociationCollection = "outInTrackSCEndcapAssociationCollection"
  string TTRHBuilder       =   "WithTrackAngle"
  bool TrajectoryInEvent = false
}


es_module Chi2ForOutIn = Chi2MeasurementEstimatorESProducer
  {
    string ComponentName = "Chi2ForOutIn"
    double MaxChi2 = 100.
    double nSigma = 3.
  }

#PropagatorWithMaterialESProducer 
es_module  PropagatorWithMaterialForEle = MaterialPropagator from "TrackingTools/MaterialEffects/data/MaterialPropagator.cfi"
replace   PropagatorWithMaterialForEle.ComponentName = "PropWithMatEle"
replace  PropagatorWithMaterialForEle.Mass = 0.000511 


#PropagatorWithMaterialESProducer 
es_module PropagatorWithMaterialOppositeForEle = OppositeMaterialPropagator from "TrackingTools/MaterialEffects/data/OppositeMaterialPropagator.cfi"
replace   PropagatorWithMaterialOppositeForEle.ComponentName = "PropWithMatOppEle"
replace   PropagatorWithMaterialOppositeForEle.Mass = 0.000511



#KFTrajectoryFitterESProducer
es_module  KFTrajectoryFitterForOutIn = KFTrajectoryFitter from "TrackingTools/TrackFitters/data/KFTrajectoryFitterESProducer.cfi"
replace  KFTrajectoryFitterForOutIn.ComponentName = "KFFitterForOutIn"
replace  KFTrajectoryFitterForOutIn.Propagator = "PropWithMatEle"
replace  KFTrajectoryFitterForOutIn.Estimator = "Chi2ForOutIn"


# KFTrajectorySmootherESProducer
es_module  KFTrajectorySmootherForOutIn = KFTrajectorySmoother from "TrackingTools/TrackFitters/data/KFTrajectorySmootherESProducer.cfi"
replace  KFTrajectorySmootherForOutIn.ComponentName = "KFSmootherForOutIn"
replace  KFTrajectorySmootherForOutIn.Propagator = "PropWithMatOppEle"
replace  KFTrajectorySmootherForOutIn.Estimator = "Chi2ForOutIn"

# KFFittingSmootherESProducer
es_module  KFFittingSmootherForOutIn = KFFittingSmoother from "TrackingTools/TrackFitters/data/KFFittingSmootherESProducer.cfi"
replace  KFFittingSmootherForOutIn.ComponentName = "KFFittingSmootherForOutIn"
replace  KFFittingSmootherForOutIn.Fitter = "KFFitterForOutIn"
replace  KFFittingSmootherForOutIn.Smoother = "KFSmootherForOutIn"



